<section class="similar_product_area p_100">
    <div class="container">
        <div class="main_title">
            <h2>Similar Products</h2>
        </div>
    </div>
</section>
<section class="cake_feature_four">
    <div class="container">
        <div class="cake_feature_inner">
            <div class="cake_feature_slider owl-carousel">
                @foreach (var item in Model.Take(6))
                {
                    <div class="item">
                        <div class="cake_feature_item">
                            <div class="cake_img">
                                <img src="~/img/@item.img" alt="" style="width: 100%; height: 300px; object-fit: cover; display: flex; justify-content: center; ">
                            </div>
                            <div class="cake_text">
                                <h4>@item.price vnđ</h4>
                                <h3>@item.name</h3>
                                <a class="pest_btn add-to-cart-btn" href="#" data-product-id="@item.id">Add to cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>