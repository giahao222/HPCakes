<!--================Cart Table Area =================-->
<section class="cart_table_area p_100">
    <div class="container">
        <div class="table-responsive">
            <table class="table" style="margin-top:65px">
                <thead>
                    <tr>
                        <th scope="col">Ảnh Minh Họa</th>
                        <th scope="col">Tên Sản Phẩm</th>
                        <th scope="col">Giá Tiền</th>
                        <th scope="col">Số Lượng</th>
                        <th scope="col">Thành Tiền</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@product.img" style="width: 150px; height: 150px; object-fit: cover; display: flex; justify-content: center;"/>
                            </td>
                            <td>@product.name</td>
                            <td class="productPrice">@product.price vnđ</td>
                            <td>
                                <input type="number" class="productQuantity" value="1" min="1" step="1">
                            </td>
                            <td class="productTotalPrice">@product.price vnđ</td>
                            <td><button class="btn btn-danger" onclick="removeFromCart(@product.id)">Xóa</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row cart_total_inner">
            <div class="col-lg-7"></div>
            <div class="col-lg-5">
                <div class="cart_total_text">
                    <div class="cart_head">
                        Tổng Tiền Giỏ Hàng
                    </div>
                    <form class="form-inline">
                        <div class="form-group flex-grow-1">
                            <input type="text" class="form-control flex-grow-1" placeholder="Voucher">
                        </div>
                        <button type="submit" class="btn btn_coupon">Sử dụng</button>
                    </form>
                    <div class="sub_total">
                        <h5>Tổng tiền trước giảm giá<span>$25.00</span></h5>
                    </div>
                    <div class="total">
                        <h4>Tổng tiền cần thanh toán<span>$25.00</span></h4>
                    </div>
                    <div class="cart_footer">
                        <a class="pest_btn" href="#">Tiến hành Thanh Toán</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
