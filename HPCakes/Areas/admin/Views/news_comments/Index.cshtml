                            {
                                <tr>
                                    <td>
                                        @Html.Raw(Number++)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.news.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.username)
                                    </td>
                                    <td>
                                        <img src="~/Content/upload/img/@item.img" width="50px" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.datebegin)
                                    </td>
                                    <td>

                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "news_comments", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
